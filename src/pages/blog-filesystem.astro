---
import BlogPost from "@components/BlogPost.astro";
import { siteConfig } from "../config/siteConfig";
import MainLayout from "../layout/MainLayout.astro";
import "../styles/global.css";

// const posts = await import.meta.glob("./posts/*.{md,mdx}",{});
const posts = Object.values(
  import.meta.glob("./posts-old/*.{md,mdx}", { eager: true })
) as any[];
---

<MainLayout title="Bryan's Blog">
  <!-- component -->
  <section class="bg-white dark:bg-gray-900">
    <div class="container px-6 py-10 mx-auto">
      <h1
        class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-white"
      >
        {siteConfig.title}
      </h1>

      <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
        {
          posts.map((post) => (
            <BlogPost
              post={post!.frontmatter}
              url={post.url}
            />
          ))
        }
      </div>
    </div>
  </section>
</MainLayout>
